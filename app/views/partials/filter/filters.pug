.row.top-buffer
    .col-lg-6.col-lg-offset-3
        ul.breadcrumb
            li Filters
.row(ng-init="init()")
    .col-lg-2
        button.btn.btn-info(type="submit",ng-click="createFilter()") ADD FILTER
    .col-lg-10
        table.table(ng-table="filterTableParams", show-filter="true")
            tr(ng-repeat="filter in $data")
                td(title="'Name'", filter="{ name: 'text'}",sortable="'name'")
                    a(ng-href="filters/{{filter.id}}") {{filter.name}}
                td(title="'Type'",filter="{'customAttributes.type' : 'text'}", sortable="'customAttributes.type'") {{filter.customAttributes.type}}