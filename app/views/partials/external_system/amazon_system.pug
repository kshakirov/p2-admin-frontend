form(role="form",name="helpForm", ng-if="external_system.customAttributes.system_id===2")
    div.form-group
        label Entity Type Name
        input.form-control(type="text", data-ng-model="item[item_key].name")
        label Trigger Type
        select.form-control( ng-model="item[item_key].trigger",
        ng-options="trigger for trigger in triggers")
    div.form-group
        label External Id
        input.form-control(type="text", data-ng-model="item[item_key].externalId")
    div.btn-group
        button.btn.btn-default(type="submit", ng-click="saveEntityTypeEntry(item)") SAVE
        button.btn.btn-default(type="submit", ng-click="emptyEntityTypeEntry()") Empty

