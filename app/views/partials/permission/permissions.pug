.row.top-buffer
    .col-lg-6.col-lg-offset-3
        ul.breadcrumb
            li Users
.row(ng-init="init()")
    .col-lg-2
        button.btn.btn-info(type="submit",ng-click="createPermission()") ADD PERMISSION
    .col-lg-10
        table.table(ng-table="tableParams", show-filter="true")
            tr(ng-repeat="permission in $data")
                td(title="name", filter="{ name: 'text'}",sortable="'name'")
                    a(ng-href="permissions/{{permission.id}}") {{permission.name}}
                td(title="valueType") {{attr.valueType}}
