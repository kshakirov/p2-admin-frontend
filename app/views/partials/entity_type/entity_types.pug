.row.top-buffer
    .col-lg-6.col-lg-offset-3
        ul.breadcrumb
            li Entity Types
.row(ng-init="init()")
    .col-lg-2
        button.btn.btn-info(type="submit",ng-click="createEntityType()") ADD ENTITY TYPE
    .col-lg-10
        table.table(ng-table="tableParams", show-filter="true")
            tr(ng-repeat="entityType in $data")
                td(title="'Name'", filter="{ name: 'text'}",sortable="'name'")
                    a(ng-href="entity-types/{{entityType.uuid}}") {{entityType.name}}
                td(title="'Deleted'",filter="{ 'deleted': 'text'}") {{entityType.deleted}}
                td(title="'Default Type'",filter="{ 'defaultType': 'text'}") {{entityType.defaultType}}