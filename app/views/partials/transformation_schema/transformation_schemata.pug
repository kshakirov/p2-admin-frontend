.row.top-buffer
    .col-lg-6.col-lg-offset-3
        ul.breadcrumb
            li Transformation Schemata
.row(ng-init="init()")
    .col-lg-2
        button.btn.btn-info(type="submit",ng-click="createSchema()") ADD SCHEMA
    .col-lg-10
        table.table(ng-table="schemataTableParams", show-filter="true")
            tr(ng-repeat="schema in $data")
                td(title="'Name'", filter="{ name: 'text'}",sortable="'name'")
                    a(ng-href="transformation-schemata/{{schema.id}}") {{schema.name}}
                td(title="'Import'", filter="{'customAttributes.export': 'text'}",sortable="'customAttributes.export'")
                    b {{schema.customAttributes.export}}